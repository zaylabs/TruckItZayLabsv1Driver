<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zaylabs.truckitzaylabsv1driver.fragment.DocumentsFragment">

    <LinearLayout
        android:id="@+id/LayoutCNIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:text="UPLOAD CNIC PICTURE" />

        <LinearLayout
            android:id="@+id/LayoutCNICFrontBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/IMG_CNIC_Front"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_menu_camera"
            android:contentDescription="@string/ProfilePicture"
            android:paddingEnd="10dp"
            />
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:id="@+id/TEXVIEWCNICFrontStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRONT"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="10dp"

                />


            <ImageView
            android:id="@+id/IMG_CNIC_Back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_menu_camera"
            android:contentDescription="@string/ProfilePicture"
            android:paddingStart="10dp"
                />
            <TextView
                android:id="@+id/TEXVIEWCNICBackStatus"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:text="BACK" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LayoutDriverLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/LayoutCNIC"
        android:orientation="vertical">

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:text="UPLOAD DRIVER LICENSE" />

        <LinearLayout
            android:id="@+id/LayoutdlFrontBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/IMG_DL_FRONT"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_menu_camera"
                android:contentDescription="@string/ProfilePicture"
                android:paddingEnd="10dp"
                />
            <TextView
                android:id="@+id/TEXVIEWDLFrontStatus"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRONT"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="10dp"

                />


            <ImageView
                android:id="@+id/IMG_DL_BACK"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_menu_camera"
                android:contentDescription="@string/ProfilePicture"
                android:paddingStart="10dp"
                />
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:id="@+id/TEXVIEWDLBackStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:text="BACK" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LayoutCarReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_below="@id/LayoutDriverLicense">

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="UPLOAD CAR REGISTRATION" />

        <LinearLayout
        android:id="@+id/REGSTATUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


    <ImageView
        android:id="@+id/IMG_REG"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_menu_camera"
        android:contentDescription="@string/ProfilePicture">

    </ImageView>

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:id="@+id/TEXVIEWREGStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:text="CAR REGISTRATION" />

        />
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_update"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/LayoutCarReg"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewCNICFRONT"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginBottom="5dp"
            android:text=""
            android:visibility="gone"/>
        <TextView
            android:id="@+id/TextViewCNICBACK"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginBottom="5dp"
            android:text=""
            android:visibility="gone"/>
        <TextView
            android:id="@+id/TextViewDLFRONT"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginBottom="5dp"
            android:text=""
            android:visibility="gone"/>
        <TextView
            android:id="@+id/TextViewDLBACK"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginBottom="5dp"
            android:text=""
            android:visibility="gone"/>
        <TextView
            android:id="@+id/TextViewREG"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginBottom="5dp"
            android:text=""
            android:visibility="gone"/>


    </LinearLayout>

</RelativeLayout>
